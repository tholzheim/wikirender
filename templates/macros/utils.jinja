{#
Renders a semantic wiki entity.
Example:
    Args:
        name="Event"
        properties= {'Title':'SMWCon', 'Year': '2020'}
    Returns:
            {{Event
            |Title= SMWCon
            |Year= 2020
            |}
#}
{%- macro render_entity(name, properties) -%}
{{'{{'}}{{ name }}
{% for property in properties %}
{%- if properties[property] -%}
|{{property}}={{ properties[property]}}
{% endif -%}
{%- endfor -%}
{{'}}'}}
{%- endmacro -%}