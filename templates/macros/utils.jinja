
{%- macro render_info(text,
                     icon=info,
                     maxWidth=None,
                     theme=None) -%}
{{'{{'}}#info: {{text}}
{%- if icon -%}
| {{ icon }}
{%- else -%}
| info
{%- endif -%}
{%- if maxWidth -%}
|max-width= {{maxWidth}}
{%- endif -%}
{%- if theme -%}
|theme={{theme}}
{%- endif -%}
{{'}}'}}
{%- endmacro -%}

